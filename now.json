{
    "name": "my-mongodb-api",
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@now/node-server"
      }
    ],
    "routes":[{
      "src":"/products",
      "dest":"/index.js",
      "methods":["GET","POST","PUT","DELETE"]
    },
    {
      "src":"/products/(?<id>[^/]+)",
      "dest":"/index.js",
      "methods":["GET","PUT","DELETE"]
    },
    {
      "src":"/orders",
      "dest":"/index.js",
      "methods":["GET","POST", "PUT","DELETE"]
    }
     
    ],
    "env": {
      "MONGODB_URI": "@ciboullet"
    }
  }
  
  